@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@*@using Export_Table_PDF_Core_MVC.Models*@
@model IEnumerable<JediApp.Database.Domain.TransactionHistory>

@{
    ViewData["Title"] = "UserTransactionHistory";
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                $("input[name='GridHtml']").val($("#Grid").html());
            });
        });
    </script>

<h4>Transactions History</h4>
    <form asp-action="GetPDF">
        <input type="hidden" name="GridHtml" />
        <input type="submit" id="btnSubmit" value="Download as PDF" class="btn btn-info btn-sm" />
    </form>
<br />
<div class=" pb-3" id="Grid">

    @*<table class="table table-bordered">*@
        <table cellpadding="5" cellspacing="0" style="border: 1px solid #ccc;font-size: 10pt;">
        <thead>
            <tr>
                @*<th>ID</th>*@
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">Name</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">Email</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">Currency</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">Amount</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">Date</th>
                <th style="background-color: #B8DBFD;border: 1px solid #ccc">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                    @*<td>@item.Id</td>*@
                                <td style="width:150px;border: 1px solid #ccc">@item.User.FirstName @item.User.LastName</td>
                                <td style="width:150px;border: 1px solid #ccc">@item.User.Email</td>
                                <td style="width:120px;border: 1px solid #ccc">@item.CurrencyName</td>
                                <td style="width:120px;border: 1px solid #ccc">@item.Amount</td>
                                <td style="width:120px;border: 1px solid #ccc">@item.DateOfTransaction</td>
                                <td style="width:120px;border: 1px solid #ccc">@item.Description</td>                                    
                        </tr>
            }
        </tbody>
    </table>

</div>








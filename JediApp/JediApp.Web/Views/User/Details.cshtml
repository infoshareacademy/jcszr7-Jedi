@model JediApp.Database.Domain.User;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="FirstName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="LastName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
    </dl>
</div>
<div>
   @* <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>*@
    <input type="button" value="Edit" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Edit", "User", new { Id = Model.Id } )'" />
    <input type="button" value="Back to List" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Index", "User" )'" />
</div>


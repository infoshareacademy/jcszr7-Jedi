

@model IEnumerable<JediApp.Database.Domain.TransactionHistory>

@{
    ViewData["Title"] = "AdminTransactionHistory";
}

<h2>All Users Transaction History</h2>

<div class=" pb-3">

    <table class="table table-bordered">
        <thead>
            <tr>
                @*<th>ID</th>*@
                <th>Name</th>
                <th>Email</th>
                <th>Currency</th>
                <th>Amount</th>
                <th>Transaction Date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                    @*<td>@item.Id</td>*@
                        <td>@item.User.FirstName @item.User.LastName</td>
                        <td>@item.User.Email</td>
                        <td>@item.CurrencyName</td>
                        <td>@item.Amount</td>
                        <td>@item.DateOfTransaction</td>
                        <td>@item.Description</td>                                    
                    </tr>
            }
        </tbody>
    </table>

</div>





